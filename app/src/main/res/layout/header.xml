<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/task_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="TASK 1"
        android:textOn="TASK 1"
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/task_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="TASK 2"
        android:textOn="TASK 2"
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/task_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="TASK 3"
        android:textOn="TASK 3"
        android:textSize="24sp" />
</LinearLayout>