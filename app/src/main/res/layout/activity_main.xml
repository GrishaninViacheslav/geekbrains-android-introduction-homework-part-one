<?xml version="1.0" encoding="utf-8"?><!-- В качестве основного контейнера выбрал ConstraintLayout как наиболее гибкий контейнер -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/background">

    <requestFocus />

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/button_clear"
        app:layout_constraintLeft_toLeftOf="@id/button_clear"
        app:layout_constraintRight_toRightOf="@id/button_division"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


    <Button
        android:id="@+id/button_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_clear"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_backspace"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_backspace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/backspace"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_parentheses"
        app:layout_constraintStart_toEndOf="@id/button_clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_parentheses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_parentheses"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_9"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_division"
        app:layout_constraintStart_toEndOf="@id/button_backspace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_division"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_multiplication"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_parentheses"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_7"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_clear" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_8"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_9"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_backspace" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_9"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_multiplication"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toBottomOf="@id/button_parentheses" />

    <Button
        android:id="@+id/button_multiplication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_multiplication"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_subtraction"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintTop_toBottomOf="@id/button_division" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_4"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_7" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_5"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_6"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_8" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_6"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_subtraction"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_9" />

    <Button
        android:id="@+id/button_subtraction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_subtraction"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_addition"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintTop_toBottomOf="@id/button_multiplication" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_1"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_inverse"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_2"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_5" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_3"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_point"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_addition"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_6" />

    <Button
        android:id="@+id/button_addition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_addition"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toTopOf="@id/button_result"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintTop_toBottomOf="@id/button_subtraction" />

    <Button
        android:id="@+id/button_inverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/inverse"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_point"
        app:layout_constraintStart_toEndOf="@id/button_inverse"
        app:layout_constraintTop_toBottomOf="@id/button_2" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_point"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/button_result"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintTop_toBottomOf="@id/button_3" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@string/button_font"
        android:padding="@dimen/button_padding"
        android:text="@string/_computation"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_point"
        app:layout_constraintTop_toBottomOf="@id/button_addition" />
</androidx.constraintlayout.widget.ConstraintLayout>



